<h1>New Book</h1>
<%= form_with scope: :book, url: books_path, local: true do |form| %>
<% if @book.errors.any? %>
  <div id="Error Causes">
    <h2>
        Errors Preventing Save:
    </h2>
    <ul>
      <% @book.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>
  <p>
    <%= form.label :author %><br>
    <%= form.text_field :author %>
  </p>
  <p>
    <%= form.label :ISBN %><br>
    <%= form.text_field :ISBN %>
  </p>
  <p>
    <%= form.label :copies %><br>
    <%= form.text_field :copies %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>
