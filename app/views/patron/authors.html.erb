<%= form_with(url: patron_authors_path, method: :get, local: true) do |form| %>
  <%= form.label :query_author, "Search Author" %>
  <%= form.text_field :query_author %>
  <%= form.submit "Search" %>
<% end %>

<% if @query %>
  <table>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>ISBN</th>
    </tr>
   
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.ISBN %></td>
        <td><%= link_to 'Add Reviews', new_book_review_path(book.id) %>
        <td><%= link_to 'View Reviews', patron_book_path(patron_id: 1, id: book.id) %>
      </tr>
    <% end %>
</table>
<% end %>
